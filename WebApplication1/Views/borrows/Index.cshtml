@model IEnumerable<WebApplication1.borrow>

@{
    ViewBag.Title = "Index";
}


<h1 class="font-size-15 mb-1">@ViewBag.BookName</h1>
<br />
<div class="row">
    <div class="col-md-6">
        <h2> #Borrows - @Model.Count();</h2>
        @if (@ViewBag.Available == "Book available")
        {
            <h3 class="text-success">@ViewBag.Available</h3>
        }
        @if (@ViewBag.Available == "Book out")
        {
            <h3 class="text-success">@ViewBag.Available</h3>
        }
    </div>
    <div class="col-md-6">
        <button class="btn btn-info">@Html.ActionLink("View Students", "Index", "Students")</button>
    </div>
</div>

<br />
<table class="table">
    <tr>
        <th>
           #
        </th>
        <th>
            @Html.DisplayNameFor(model => model.takenDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.broughtDate)
        </th>
        
        <th>
           Borrowed by
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.borrowId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.takenDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.broughtDate)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.student.name) @Html.DisplayFor(modelItem => item.student.surname)
        </td>
    </tr>
}

</table>
